BOT_TOKEN=123456:ABCDEF_your_bot_token
ADMINS=123456789,987654321
ADMIN_GROUP_ID=-1001234567890
ADMIN_LOG_CHANNEL_ID=-1001234567000

# Webhook settings (optional). If not using webhook, run with polling.
USE_WEBHOOK=false
WEBHOOK_BASE=https://your.domain.tld
WEBHOOK_SECRET=supersecret
PORT=8080

# Database: use sqlite (default) or postgres.
# For SQLite (file):
DATABASE_URL=sqlite+aiosqlite:///./data/bot.db
# For Postgres:
# DATABASE_URL=postgresql+asyncpg://user:pass@host:5432/dbname

# Content & spam control
MAX_PHOTOS=20
BAD_WORDS=spamword1,spamword2,телеграмм-казино
PHASH_HAMMING_THRESHOLD=6
RATE_LIMIT_PER_MINUTE=10
